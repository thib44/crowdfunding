<h1 class="text-center">Welcome to the Crowdfunding plateforme</h1>
<div class="text-center">
  <%= link_to 'login', new_user_session_path, class: 'btn btn-success' %>
  <%= link_to 'sign-up', new_user_registration_path, class: 'btn btn-primary' %>
  <h2>Our projects</h2>
</div>

<div class="container">
    <div class="margin-top">
      <% @projets.in_groups_of(3,false) do |records| %>
        <div class="row">
          <%= render records %>
        </div>
      <% end %>
  </div>
  <div class="text-center">
    <%= paginate @projets %>
  </div>

</div>

