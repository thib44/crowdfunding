<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <h3><%= @projet.nom %></h3>
        <p> Contribute to this project, you can choose the amount that you want ! </p>
      </div>


      <%= simple_form_for(@contribution, url: projet_contributions_path(@contribution.projet)) do |f| %>
        <%= f.input :amount, placeholder: "Montant de votre contribution", label: false %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>

